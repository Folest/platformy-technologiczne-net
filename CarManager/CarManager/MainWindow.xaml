<Window x:Class="CarManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="CarsDataGrid" AutoGenerateColumns="False"
                  Height="400" RowHeight="40" Width="700" VerticalAlignment="Center"
                  ItemsSource="{Binding Cars}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Year}"/>
                <DataGridTextColumn Header="Engine" Binding="{Binding Motor.GetDetails}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>